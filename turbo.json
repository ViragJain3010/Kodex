{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "lint": {
      "cache": true
    },
    "test": {
      "dependsOn": ["^build", "lint"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "out/**"],
      "cache": true
    }
  }
}
